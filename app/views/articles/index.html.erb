<div class="panel panel-default container">
  <!-- Default panel contents -->
  <div class="panel-heading">Mi Blog!</div>

  <!-- Table -->
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>
     
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), remote: true %></td>
        <td><%= link_to 'Edit', edit_article_path(article), remote: true  %></td>

        <td><%= link_to 'Destroy', article_path(article),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <div class="panel-footer"><%= link_to 'New article', new_article_path, remote: true %></div>
  
</div>

